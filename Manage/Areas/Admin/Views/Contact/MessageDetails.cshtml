@model ContactMessage
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3 d-flex align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold main-color">Contact Message Details</h6>
                        <div>
                            <a asp-action="messages" asp-controller="contact" class="btn btn-primary">Back to List</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 my-3">
                                <div class="row">
                                    <div class="col-6 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.Name)</h5>
                                    </div>
                                    <div class="col-6">
                                        @Html.Raw(Model.Name)
                                    </div>
                                    <div class="col-6 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.Surname)</h5>
                                    </div>
                                    <div class="col-6">
                                        @Html.Raw(Model.Surname)
                                    </div>
                                    <div class="col-6 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.Email)</h5>
                                    </div>
                                    <div class="col-6">
                                        @Html.Raw(Model.Email)
                                    </div>
                                    <div class="col-12 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.Message)</h5>
                                    </div>
                                    <div class="col-12">
                                        @Html.Raw(Model.Message)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
