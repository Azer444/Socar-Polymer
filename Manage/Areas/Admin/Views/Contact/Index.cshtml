@model Manage.Areas.Admin.Models.ViewModels.ContactIndexViewModel

@{
    ViewData["Title"] = "Contact Page";
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3">
                        <h6 class="m-0 font-weight-bold main-color">Contact Page</h6>
                    </div>
                    <div class="card-body">
                        <h2 class="main-color">Text Component</h2>
                        @if (Model.ContactTextComponent == null)
                        {
                            <a asp-action="add_text_component" asp-controller="contact" class="btn btn-primary mb-3">Add Text Component</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Content (EN)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center">@Html.Raw(Model.ContactTextComponent.Content_EN)</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a asp-action="edit_text_component" asp-controller="contact"  class="btn btn-primary mr-1">Edit</a>
                                                    <a asp-action="details_text_component" asp-controller="contact" class="btn btn-info mr-1">Details</a>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }
                        <h2 class="main-color mt-3">Form Component</h2>
                        @if (Model.ContactFormComponent == null)
                        {
                            <a asp-action="add_form_component" asp-controller="contact" class="btn btn-primary mb-3">Add Form Component</a>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th class="main-color text-center">Title (AZ)</th>
                                            <th class="main-color text-center">Title (RU)</th>
                                            <th class="main-color text-center">Title (EN)</th>
                                            <th class="main-color text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td class="text-center">@Model.ContactFormComponent.Title_AZ</td>
                                            <td class="text-center">@Model.ContactFormComponent.Title_RU</td>
                                            <td class="text-center">@Model.ContactFormComponent.Title_EN</td>
                                            <td class="text-center">
                                                <div class="d-flex justify-content-center">
                                                    <a asp-action="edit_form_component" asp-controller="contact" class="btn btn-primary mr-1">Edit</a>
                                                    <a asp-action="details_form_component" asp-controller="contact" class="btn btn-info mr-1">Details</a>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>