@model NavTitleComponent
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Edit Navbar Title Component</h1>
                <div class="row main-color">
                    <div class="col-12">
                        <form asp-action="edit_title_component" asp-controller="nav" asp-area="admin" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="PhotoName" value="@Model.PhotoName" />
                            <div class="container">
                                <div class="row">
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Title</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_AZ" class="control-label"></label>
                                            <input asp-for="Title_AZ" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_RU" class="control-label"></label>
                                            <input asp-for="Title_RU" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_EN" class="control-label"></label>
                                            <input asp-for="Title_EN" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Content</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_AZ" class="control-label"></label>
                                            <textarea asp-for="Content_AZ" class="form-control"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_RU" class="control-label"></label>
                                            <textarea asp-for="Content_RU" class="form-control"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Content_EN" class="control-label"></label>
                                            <textarea asp-for="Content_EN" class="form-control"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Link</h3>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="Link" class="control-label"></label>
                                            <input asp-for="Link" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Main Component</h3>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            <input type="checkbox" asp-for="HasMainComponent" />
                                            <label asp-for="HasMainComponent" class="control-label"></label>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3 photo d-none">
                                        <h3 class="main-color">Photo</h3>
                                    </div>
                                    <div class="col-12 photo d-none">
                                        <div class="form-group">
                                            @{
                                                if (!string.IsNullOrEmpty(Model.PhotoName))
                                                {
                                                    var photoPath = "/uploads/" + Model.PhotoName;
                                                    <img src="@photoPath" class="image-size mb-3" />
                                                }
                                            }
                                            <div class="custom-file">
                                                <input asp-for="Photo" class="form-control custom-file-input" accept="image/*" />
                                                <label class="custom-file-label">
                                                    Edit photo...
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <div class="form-group">
                                            <input type="submit" value="Edit" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="nav" class="main-color">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/nav_admin.js"></script>
    <script src="~/js/show_file_name.js"></script>
    <script src="~/vendor/ckeditor/ckeditor.js"></script>

    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $('#Title_EN').on('input', function () {
            $('#Slug').val(slug($(this).val()));
        });

        ClassicEditor
            .create(document.querySelector('#Content_AZ'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })

        ClassicEditor
            .create(document.querySelector('#Content_RU'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })


        ClassicEditor
            .create(document.querySelector('#Content_EN'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })

        ClassicEditor
            .create(document.querySelector('#Content_TR'), {
                removePlugins: ["Link"],
                viewportTopOffset: 50,
                toolbar: ['heading', '|', 'bold', 'italic', 'bulletedList']
            })
            .catch(error => {
                console.error(error);
            })
    </script>
}