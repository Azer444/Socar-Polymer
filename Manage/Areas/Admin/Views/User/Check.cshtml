@model User
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header main-background py-3 d-flex align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold main-color">User check</h6>
                        <div>
                            <a asp-action="checklist" asp-controller="user" class="btn btn-primary">Back to List</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 my-3">
                                <div class="row">
                                    <div class="col-6 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.FullName)</h5>
                                    </div>
                                    <div class="col-6">
                                        @Html.DisplayFor(model => model.FullName)
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 my-3">
                                <div class="row">
                                    <div class="col-6 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.Email)</h5>
                                    </div>
                                    <div class="col-6">
                                        @Html.DisplayFor(model => model.Email)
                                    </div>
                                    <div class="col-6 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.Country)</h5>
                                    </div>
                                    <div class="col-6">
                                        @Html.DisplayFor(model => model.Country)
                                    </div>
                                    <div class="col-6 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.Company)</h5>
                                    </div>
                                    <div class="col-6">
                                        @Html.DisplayFor(model => model.Company)
                                    </div>
                                    <div class="col-6 font-weight-bold main-color">
                                        <h5>@Html.DisplayNameFor(model => model.Position)</h5>
                                    </div>
                                    <div class="col-6">
                                        @Html.DisplayFor(model => model.Position)
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 my-3">
                                <div class="row">
                                    <div class="col-6 font-weight-bold main-color">
                                        <form method="post" asp-action="confirm" asp-controller="user" asp-route-id="@Model.Id">
                                            <button type="submit" class="btn-primary btn">Confirm</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
