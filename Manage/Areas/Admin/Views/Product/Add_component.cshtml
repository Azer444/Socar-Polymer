@model Product

@{
    var productCategoryId = Url.ActionContext.RouteData.Values["id"];
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Add Component</h1>
                <div class="row">
                    <div class="col-12">
                        <form asp-action="add_component" asp-controller="product" asp-area="admin" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="form-group">
                                    <input asp-for="Id" type="hidden" value="0" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="@Model.ProductCategoryId" value="@productCategoryId" class="form-control">
                                </div>
                                <div class="col-12 mt-3">
                                    <h3 class="main-color">Properties</h3>
                                </div>
                                @for (int i = 0; i < ViewBag.Properties.Count; i++)
                                {
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">@ViewBag.Properties[i].Name_AZ</label>
                                            <input asp-for="@Model.ProductFields[i].Content_AZ" class="form-control">
                                            <span asp-validation-for="@Model.ProductFields[i].Content_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">@ViewBag.Properties[i].Name_RU</label>
                                            <input asp-for="@Model.ProductFields[i].Content_RU" class="form-control">
                                            <span asp-validation-for="@Model.ProductFields[i].Content_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">@ViewBag.Properties[i].Name_EN</label>
                                            <input asp-for="@Model.ProductFields[i].Content_EN" class="form-control">
                                            <span asp-validation-for="@Model.ProductFields[i].Content_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12"></div>
                                }
                                <div class="col-12 mt-3">
                                    <h3 class="main-color">Files</h3>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">TDS</h4>
                                </div>
                                <div class="col-12 col-md-6 mt-3">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input asp-for="TDSFile_AZ" class="form-control custom-file-input" accept=".pdf,.xls,.xlsx" />
                                            <label class="custom-file-label">
                                                Add TDS AZ File...
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-3">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input asp-for="TDSFile_RU" class="form-control custom-file-input" accept=".pdf,.xls,.xlsx" />
                                            <label class="custom-file-label">
                                                Add TDS RU File...
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-3">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input asp-for="TDSFile_EN" class="form-control custom-file-input" accept=".pdf,.xls,.xlsx" />
                                            <label class="custom-file-label">
                                                Add TDS EN File...
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <h4 class="main-color">SDS</h4>
                                </div>
                                <div class="col-12 col-md-6 mt-3">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input asp-for="SDSFile_AZ" class="form-control custom-file-input" accept=".pdf,.xls,.xlsx" />
                                            <label class="custom-file-label">
                                                Add SDS AZ File...
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-3">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input asp-for="SDSFile_RU" class="form-control custom-file-input" accept=".pdf,.xls,.xlsx" />
                                            <label class="custom-file-label">
                                                Add SDS RU File...
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 mt-3">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input asp-for="SDSFile_EN" class="form-control custom-file-input" accept=".pdf,.xls,.xlsx" />
                                            <label class="custom-file-label">
                                                Add SDS EN File...
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 mt-3">
                                    <h3 class="main-color">Brochures</h3>
                                </div>
                                <div class="col-12 mt-3">
                                    <div class="form-group">
                                        <div class="custom-file">
                                            <input multiple asp-for="Brochures" class="form-control custom-file-input" accept=".pdf,.xls,.xlsx" />
                                            <label class="custom-file-label">
                                                Add Brochures...
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <div class="form-group">
                                        <input type="submit" value="Add" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="product">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/show_file_name.js"></script>
}

