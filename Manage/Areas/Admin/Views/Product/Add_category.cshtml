@model ProductCategory

@{
    var productTitleCategoryId = Url.ActionContext.RouteData.Values["id"];
}

<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Add Product Category</h1>
                <div class="row">
                    <div class="col-12">
                        <form asp-action="add_category" asp-controller="product" asp-area="admin" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="form-group">
                                    <input asp-for="Id" type="hidden" value="0" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="@Model.ProductTitleCategoryId" value="@productTitleCategoryId" class="form-control">
                                </div>
                                <div class="col-12 mt-3">
                                    <h3 class="main-color">Name</h3>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Name_AZ" class="control-label"></label>
                                        <input asp-for="@Model.Name_AZ" class="form-control">
                                        <span asp-validation-for="@Model.Name_AZ" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Name_RU" class="control-label"></label>
                                        <input asp-for="@Model.Name_RU" class="form-control">
                                        <span asp-validation-for="@Model.Name_RU" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="form-group">
                                        <label asp-for="@Model.Name_EN" class="control-label"></label>
                                        <input asp-for="@Model.Name_EN" class="form-control">
                                        <span asp-validation-for="@Model.Name_EN" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 mt-3">
                                    <div class="form-group">
                                        <input type="submit" value="Add" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="product">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

