@model Product
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Details Component</h1>
                <div class="row">
                    <div class="col-12">
                        <form>
                            <div class="row">
                                <div class="form-group">
                                    <input asp-for="TDSName_AZ" type="hidden" value="@Model.TDSName_AZ" />
                                    <input asp-for="SDSName_AZ" type="hidden" value="@Model.SDSName_AZ" />
                                    <input asp-for="TDSName_RU" type="hidden" value="@Model.TDSName_RU" />
                                    <input asp-for="SDSName_RU" type="hidden" value="@Model.SDSName_RU" />
                                    <input asp-for="TDSName_EN" type="hidden" value="@Model.TDSName_EN" />
                                    <input asp-for="SDSName_EN" type="hidden" value="@Model.SDSName_EN" />
                                </div>
                                <div class="form-group">
                                    <input asp-for="Id" type="hidden" value="@Model.Id" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="@Model.ProductCategoryId" value="@Model.ProductCategoryId" class="form-control">
                                </div>
                                <div class="col-12 mt-3">
                                    <h3 class="main-color">Properties</h3>
                                </div>
                                @for (int i = 0; i < ViewBag.Properties.Count; i++)
                                {
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">@ViewBag.Properties[i].Name_AZ</label>
                                            <input readonly asp-for="@Model.ProductFields[i].Content_AZ" class="form-control">
                                            <span asp-validation-for="@Model.ProductFields[i].Content_AZ" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">@ViewBag.Properties[i].Name_RU</label>
                                            <input readonly asp-for="@Model.ProductFields[i].Content_RU" class="form-control">
                                            <span asp-validation-for="@Model.ProductFields[i].Content_RU" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">@ViewBag.Properties[i].Name_EN</label>
                                            <input readonly asp-for="@Model.ProductFields[i].Content_EN" class="form-control">
                                            <span asp-validation-for="@Model.ProductFields[i].Content_EN" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12"></div>
                                }
                                <div class="col-12 mt-3">
                                    <h3 class="main-color">Files</h3>
                                </div>
                                <div class="col-6 font-weight-bold main-color">
                                    <h5>TDS</h5>
                                </div>
                                <div class="col-6">
                                    @if (Model.TDSName_AZ != null)
                                    {
                                        <a href="/uploads/@Model.TDSName_AZ">TDS AZ</a>
                                    }
                                    @if (Model.TDSName_RU != null)
                                    {
                                        <a href="/uploads/@Model.TDSName_RU">TDS RU</a>
                                    }
                                    @if (Model.TDSName_EN != null)
                                    {
                                        <a href="/uploads/@Model.TDSName_EN">TDS EN</a>
                                    }
                                </div>
                                <div class="col-6 font-weight-bold main-color">
                                    <h5>SDS</h5>
                                </div>
                                <div class="col-6">
                                    @if (Model.SDSName_AZ != null)
                                    {
                                        <a href="/uploads/@Model.SDSName_AZ">SDS AZ</a>
                                    }
                                    @if (Model.SDSName_RU != null)
                                    {
                                        <a href="/uploads/@Model.SDSName_RU">SDS RU</a>
                                    }
                                    @if (Model.SDSName_EN != null)
                                    {
                                        <a href="/uploads/@Model.SDSName_EN">SDS EN</a>
                                    }
                                </div>
                                <div class="col-6 font-weight-bold main-color">
                                    <h5>@Html.DisplayNameFor(model => model.ProductBrochures)</h5>
                                </div>
                                <div class="col-6">
                                    @{
                                        var order = 1;
                                        foreach (var productBrochure in Model.ProductBrochures)
                                        {
                                            <a class="d-block" href="/uploads/@productBrochure.Name">Brochure-@order</a>

                                            order++;
                                        }
                                    }
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="product">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/show_file_name.js"></script>
}

