@model HomeSliderComponentEditViewModel
<!-- Page Wrapper -->
<div id="wrapper">
    @await Html.PartialAsync("_SidebarPartial")
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            @await Html.PartialAsync("_TopbarPartial")
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <h1 class="main-color">Edit Home Slider Component</h1>
                <div class="row main-color">
                    <div class="col-12">
                        <form asp-action="editslidercomponent" asp-controller="home" asp-area="admin" method="post" enctype="multipart/form-data">
                            <input asp-for="Id" type="hidden">
                            <div class="container">
                                <div class="row">
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Title</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_AZ" class="control-label"></label>
                                            <input asp-for="Title_AZ" class="form-control">
                                            <span asp-validation-for="Title_AZ"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_RU" class="control-label"></label>
                                            <input asp-for="Title_RU" class="form-control">
                                            <span asp-validation-for="Title_RU"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Title_EN" class="control-label"></label>
                                            <input asp-for="Title_EN" class="form-control">
                                            <span asp-validation-for="Title_EN"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Link</h3>
                                    </div>
                                    <div class="col-12 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Link" class="control-label"></label>
                                            <input asp-for="Link" class="form-control">
                                            <span asp-validation-for="Link"></span>
                                        </div>
                                    </div>
                                    <div class="col-12 mt-3">
                                        <h3 class="main-color">Photo</h3>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group">
                                            @{
                                                var photoPath = "/uploads/" + Model.PhotoName;
                                                <img src="@photoPath" class="image-size mb-3" />
                                            }
                                            <div class="custom-file">
                                                <input asp-for="Photo" class="form-control custom-file-input" accept="image/*" />
                                                <label class="custom-file-label">
                                                    Edit photo...
                                                </label>
                                            <span asp-validation-for="Photo"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <div class="form-group">
                                            <input type="submit" value="Edit" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <a asp-action="index" asp-controller="home" class="main-color">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/show_file_name.js"></script>

    <!-- validate js -->
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}